#include "main.h"
#include "stm32f4xx_hal.h"
void HAL_MspInit(void)
{
	__HAL_RCC_SYSCFG_CLK_ENABLE();
	__HAL_RCC_PWR_CLK_ENABLE();

	HAL_NVIC_SetPriorityGrouping(NVIC_PRIORITYGROUP_4);
}

/* TIM2 Encoder */
void HAL_TIM_Encoder_MspInit(TIM_HandleTypeDef *htim)
{
	if(htim->Instance == TIM2)
	{
		__HAL_RCC_GPIOA_CLK_ENABLE();

		GPIO_InitTypeDef GPIO_InitTypeDef = {0};
		GPIO_InitTypeDef.Pin = GPIO_PIN_0 | GPIO_PIN_1;
		GPIO_InitTypeDef.Mode = GPIO_MODE_AF_PP;
		GPIO_InitTypeDef.Pull = GPIO_NOPULL;
		GPIO_InitTypeDef.Speed = GPIO_SPEED_FREQ_LOW;
		GPIO_InitTypeDef.Alternate = GPIO_AF1_TIM2;

		HAL_GPIO_Init(GPIOA, &GPIO_InitTypeDef);

		HAL_NVIC_SetPriority(TIM2_IRQn, 5, 0);
		HAL_NVIC_EnableIRQ(TIM2_IRQn);

	}
}

/* TIM4 PWM */
void HAL_TIM_PWM_MspInit(TIM_HandleTypeDef *htim)
{
	if(htim->Instance == TIM4)
	{
		__HAL_RCC_GPIOB_CLK_ENABLE();

		GPIO_InitTypeDef GPIO_InitTypeDef = {0};
		GPIO_InitTypeDef.Pin = GPIO_PIN_6;
		GPIO_InitTypeDef.Mode = GPIO_MODE_AF_PP;
		GPIO_InitTypeDef.Pull = GPIO_NOPULL;
		GPIO_InitTypeDef.Speed = GPIO_SPEED_FREQ_HIGH;
		GPIO_InitTypeDef.Alternate = GPIO_AF1_TIM4;

		HAL_GPIO_Init(GPIOB, &GPIO_InitTypeDef);

		HAL_NVIC_SetPriority(TIM4_IRQn, 6, 0);
		HAL_NVIC_EnableIRQ(TIM2_IRQn);

	}
}

/* ADC1 */
void HAL_ADC_MspInit(ADC_HandleTypeDef *hadc)
{
	if (hadc->Instance == ADC1)
	{
		__HAL_RCC_GPIOA_CLK_ENABLE();

		GPIO_InitTypeDef GPIO_InitTypeDef = {0};
		GPIO_InitTypeDef.Pin = GPIO_PIN_4;
		GPIO_InitTypeDef.Mode = GPIO_MODE_ANALOG;
		GPIO_InitTypeDef.Pull = GPIO_NOPULL;

		HAL_GPIO_Init(GPIOB, &GPIO_InitTypeDef);

		HAL_NVIC_SetPriority(TIM4_IRQn, 7, 0);
		HAL_NVIC_EnableIRQ(TIM2_IRQn);

	}
}

/* UART2 */
void HAL_UART_MspInit(UART_HandleTypeDef *huart)
{
	if (huart->Instance == USART2)
	{
		__HAL_RCC_GPIOA_CLK_ENABLE();

		GPIO_InitTypeDef GPIO_InitTypeDef = {0};
		GPIO_InitTypeDef.Pin = GPIO_PIN_2 | GPIO_PIN_3;
		GPIO_InitTypeDef.Mode = GPIO_MODE_AF_PP;
		GPIO_InitTypeDef.Pull = GPIO_PULLUP;
		GPIO_InitTypeDef.Speed = GPIO_SPEED_FREQ_VERY_HIGH;
		GPIO_InitTypeDef.Alternate = GPIO_AF7_USART2;

		HAL_GPIO_Init(GPIOA, &GPIO_InitTypeDef);

		HAL_NVIC_SetPriority(TIM4_IRQn, 8, 0);
		HAL_NVIC_EnableIRQ(TIM2_IRQn);

	}
}
